<div style="text-align: center">
  <%= form_tag("search", :method => "post") do %>
    <%= label_tag(:q, "Search Movie:") %>
    <%= text_field_tag(:q, nil, required: true) %>
    <%= submit_tag("Search") %>
  <% end %>
</div>

<% unless @movies.blank? %>
  <h1 style="text-align: center; color: blue">List of Movies</h1>

  <table width="100%" border="1">
    <thead style="text-align: center">
    <tr>
      <th>Movie Name</th>
      <th>Release Year</th>
      <th>Poster</th>
    </tr>
    </thead>
    <tbody style="text-align: center">
    <% @movies.each do |movie| %>
      <td><%= movie[0] %></td>
      <td><%= movie[1] %></td>
      <td colspan = 4>
        <a href="<%=movie[2]%>">
          <img src="<%=movie[2]%>" alt="No Poster Available" border=3 height=120 width=120/>
        </a>
      </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
